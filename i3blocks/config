# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none
signal=10

[primary]
label=ÔâÖ
command=echo "$(xclip -o |  grep -o '^.\{0,9\}' | sed -e 's/[^a-zA-Z0-9\-]/_/g')"
interval=2
color=gray

[clipboard]
label=ÔÉÜ
command=echo "$(xclip -o -selection "clipboard" | grep -o '^.\{0,9\}' | sed -e 's/[^a-zA-Z0-9\-]/_/g')"
interval=2
color=gray

[mediaplayer]
label=‚ô™:
instance=spotify
command=~/.config/i3blocks/i3blocks-contrib/mediaplayer/mediaplayer
interval=1
signal=10
color=#50C878

[notifications]
label=ÔÉ≥
command=rofication-status
interval=1
markup=pango

[volume-pulseaudio]
command=~/.config/i3blocks/i3blocks-contrib/volume-pulseaudio/volume-pulseaudio -C #93a1a1
interval=once
signal=1

