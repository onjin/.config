#label=üïë:
#command=~/.config/i3blocks/blocks/toggl
#interval=60
#color=#50C878

[volume-pulseaudio]
command=~/.config/i3blocks/i3blocks-contrib/volume-pulseaudio/volume-pulseaudio -C #93a1a1 
interval=once
signal=1
interval=2

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=ÔÉá /
instance=/
interval=120

[disk]
label=ÔÉá home
instance=/home/onjin
interval=120

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
## Fetch the public IP address only on startup
[ips]
command=/home/onjin/.config/i3blocks/blocks/ips
interval=once
color=#00FF00

# Battery indicator
[battery]
command=~/.config/i3blocks/blocks/battery2
label=‚ö°
interval=60
markup=pango

# Date Time
[time]
label=UTC
#command=date --utc '+%Y-%m-%d %H:%M:%S'
command=date --utc '+ %H:%M:%S'
interval=5

[calendar]
command=LABEL='ÔÅ≥ ' DATEFMT='+%a %d.%m.%Y %H:%M:%S' SHORTFMT='+%a %d.%m.%Y %H:%M:%S' HEIGHT=0 ~/.config/i3blocks/i3blocks-contrib/calendar/calendar
interval=1

