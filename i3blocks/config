[calendar]
command=LABEL='ÔÅ≥ ' DATEFMT='+%a %d.%m.%Y %H:%M:%S' SHORTFMT='+%a %d.%m.%Y %H:%M:%S' HEIGHT=0 ~/.config/i3blocks/i3blocks-contrib/calendar/calendar
interval=1


